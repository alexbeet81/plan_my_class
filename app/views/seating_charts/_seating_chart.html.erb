<div class="grid grid-cols-5 gap-4">
  <% @classroom.current_seating_chart.desks.includes([:student]).each do |desk| %>
    <div class="border p-4 flex justify-center items-center">
      <div style="grid-template-rows: repeat(<%= @classroom.current_seating_chart.rows %>, minmax(0, 1fr));" class="grid gap-4">
        <%= desk.student ? desk.student.first_name : desk.row_position + desk.column_position %>
      </div>
    </div>
  <% end %>
</div>